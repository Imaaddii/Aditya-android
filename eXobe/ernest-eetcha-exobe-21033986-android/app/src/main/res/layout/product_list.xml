<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="@dimen/_15sdp"

    app:cardCornerRadius="10dp"
    app:cardElevation="7dp">


    <LinearLayout
        android:id="@+id/CategoryCV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="2dp">


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/item_image"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_130sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:src="@drawable/product" />

            <RelativeLayout
                android:layout_width="@dimen/_26sdp"
                android:layout_height="@dimen/_27sdp"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/_9sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_marginRight="@dimen/_8sdp">


                <LinearLayout
                    android:id="@+id/heartOutline"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/heart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/blackheart"
                            android:visibility="visible" />

                        <ImageView
                            android:id="@+id/heartfill"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/fill_heartnew"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>

<!--                <LinearLayout-->
<!--                    android:id="@+id/red_heartFill"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:gravity="center"-->
<!--                    android:visibility="visible"-->
<!--                    android:layout_centerInParent="true">-->

<!--                    <ImageView-->
<!--                        android:layout_width="@dimen/_15sdp"-->
<!--                        android:layout_height="@dimen/_15sdp"-->
<!--                        android:background="@drawable/heart_fill"-->
<!--                        android:layout_centerInParent="true"  />-->
<!--                </LinearLayout>-->

            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical"
            android:weightSum="2">


            <TextView
                android:id="@+id/itemTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:singleLine="true"
                android:text="Sverom chair"

                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/poppins_medium" />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/priceTag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M.R.P: "
                    android:fontFamily="@font/poppins_light"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:id="@+id/itemValue2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/line"
                    android:gravity="center"
                    android:textColor="@color/red"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"/>


            </LinearLayout>




        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>