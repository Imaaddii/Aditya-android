<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddedProductDescription">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/dealViewImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/add_deal_image" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="@dimen/_35sdp">

                    <ImageView
                        android:id="@+id/AddedProductDescription_Back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rectangle_background"
                        android:src="@drawable/ic_baseline_keyboard_backspace_24" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/share"
                        android:layout_marginRight="@dimen/_5sdp"
                       />

                </RelativeLayout>


            </RelativeLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_218sdp"
                android:layout_marginBottom="-40dp"
                app:cardCornerRadius="@dimen/_30sdp"
                app:cardElevation="@dimen/_7sdp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="@dimen/_25sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Jan Sflanaganvik sofa"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/SUbTitle" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/dealViewOfferValue1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="R"
                            android:textColor="@color/red"
                            android:textSize="@dimen/price"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dealViewOfferValue2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="599"
                            android:textColor="@color/red"
                            android:textSize="@dimen/price"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/dealViewOfferValue3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text=".00"
                            android:textColor="@color/red"
                            android:textSize="@dimen/price"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/_15sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:weightSum="10">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RatingBar
                                        android:id="@+id/ratingBar"
                                        style="?android:attr/ratingBarStyleSmall"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="0dp"
                                        android:layout_weight="5"
                                        android:paddingVertical="3dp"
                                        android:progressTint="@color/rating_bar_golden"
                                        android:numStars="5"
                                        android:rating="4" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="4.6"
                                        android:textColor="@color/text_color"
                                        android:textSize="@dimen/matterText"
                                        android:textStyle="bold" />


                                </LinearLayout>



                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_light"
                                        android:text="98"
                                        android:textColor="@color/gray_color"
                                        android:textSize="@dimen/matterText" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/poppins_light"
                                        android:text=" Reviews"
                                        android:textColor="@color/gray_color"
                                        android:textSize="@dimen/matterText" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:background="@drawable/ic_baseline_arrow_forward_ios_24" />
                                </LinearLayout>

                            </LinearLayout>



                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingVertical="3dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/image1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:paddingVertical="3dp"
                                    android:paddingStart="@dimen/_5sdp"
                                    android:src="@drawable/avatar_one" />

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/image2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:paddingVertical="3dp"
                                    android:paddingStart="@dimen/_40sdp"
                                    android:src="@drawable/avatar_two" />

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/image3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:paddingVertical="3dp"
                                    android:paddingStart="@dimen/_75sdp"
                                    android:src="@drawable/avatar_three" />

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/image4"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerVertical="true"
                                    android:paddingVertical="3dp"
                                    android:paddingStart="@dimen/_110sdp"
                                    android:src="@drawable/avatar_four" />

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/dealViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_weight="3"
                        android:background="@drawable/deal_id_background"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:text="Product Description"
                        android:textColor="@color/red"
                        android:textSize="@dimen/matterText"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDealViewDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/bumper_offer_text"
                        android:textSize="@dimen/Form_ETorTV" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:background="#94F1F1F1" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Customer Odered List"
                            android:textColor="@color/text_color"
                            android:textSize="@dimen/SUbTitle" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <TableLayout
                                android:id="@+id/tabla_cuerpo"
                                android:layout_width="match_parent"
                                android:weightSum="4"
                                android:layout_height="wrap_content">

                                <TableRow
                                    android:id="@+id/tableRow1"
                                    android:layout_width="wrap_content"
                                    android:background="@drawable/cell_shape"
                                    android:layout_height="wrap_content">

                                    <TextView

                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:layout_weight="1.2"
                                        android:background="@drawable/cell_shape"
                                        android:gravity="center"
                                        android:text="Customer Name"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textAppearance="?android:attr/textAppearanceMedium"
                                        android:textSize="@dimen/_10sdp" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/_5sdp"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="@dimen/_10sdp"
                                        android:gravity="center"
                                        android:text="Order \nDate &amp; Time"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/cell_shape"
                                        android:layout_weight="1.2"
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="@dimen/_10sdp"
                                        android:text="Phone Number"
                                        android:textAppearance="?android:attr/textAppearanceMedium" />


                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="0.5"
                                        android:gravity="center"
                                        android:fontFamily="@font/poppins_medium"
                                        android:textSize="@dimen/_10sdp"
                                        android:text=""
                                        android:textAppearance="?android:attr/textAppearanceMedium" />
                                </TableRow>

                            </TableLayout>


                            </LinearLayout>



                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/addedDealProductRecycler"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/_15sdp"/>





                    </LinearLayout>



                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>


</LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>