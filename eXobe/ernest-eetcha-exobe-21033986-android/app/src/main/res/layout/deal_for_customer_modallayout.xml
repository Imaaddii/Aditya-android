<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dealForCustomerCardView"
    android:layout_margin="5dp"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="7dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:id="@+id/viewButton"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:paddingVertical="5dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativelayout"
            tools:ignore="ExtraText">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardElevation="3dp">

                <ImageView
                    android:id="@+id/item_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    android:src="@color/black" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="@dimen/_26sdp"
                    android:layout_height="@dimen/_27sdp"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_8sdp">



                    <ImageView
                        android:id="@+id/heartOutline"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/blackheart"

                        />

                    <ImageView
                        android:id="@+id/heartFill"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/fill_heartnew"

                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>



        <TextView
            android:id="@+id/productname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sevon Chair"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:gravity="center"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="2"
            >

            <TextView
                android:id="@+id/priceTag"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="M.R.P"
                android:layout_weight="0.5"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/poppins_light"
                android:singleLine="true"
                android:textColor="@color/text_color"
                />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/itemValue1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$799.00"
                    android:gravity="end"
                    android:textSize="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    />

                <TextView
                    android:id="@+id/itemValue3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:text="$799.00"
                    android:gravity="end"
                    android:textSize="@dimen/_10sdp"
                    android:singleLine="true"
                    android:fontFamily="@font/poppins_semibold"
                    android:textColor="@color/red"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/itemTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deal Period"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/text_color2"
                android:textSize="@dimen/matterText"/>

            <TextView
                android:id="@+id/itemValue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$400"
                android:layout_weight="1"
                android:textStyle="bold"
                android:gravity="end"
                android:textColor="@color/red"
                android:textSize="@dimen/price"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires On"
                android:fontFamily="@font/poppins_light"
                android:textSize="@dimen/_10sdp"
                android:layout_weight="1"
                android:textColor="@color/text_color"
                />

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00/00/0000"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/text_color2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:weightSum="2"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiry Time"
                android:fontFamily="@font/poppins_light"
                android:layout_weight="1"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/text_color"
                />

            <TextView
                android:id="@+id/EXPTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:layout_weight="1"
                android:gravity="end"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/text_color2"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/EXPTimeIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00:00"
                android:layout_weight="1"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/red"
                />

        </LinearLayout>

    </LinearLayout>




</androidx.cardview.widget.CardView>