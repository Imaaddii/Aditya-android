<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Registration_serviceprovider">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="8dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="111dp"
                        android:layout_height="111dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:src="@drawable/layer_3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/select_Image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="2dp"
                        android:background="#00FFFFFF"
                        android:src="@drawable/ic_baseline_camera_alt_24"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.619"
                        app:layout_constraintStart_toStartOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Full Name"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/focus"
                        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_light"
                        android:hint="Enter Full name"
                        android:text="karan sharma"
                        android:inputType="textCapWords"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/errorTvEditFirstName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Email"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/focus"
                        android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/Email"
                        android:text="an-karan@mailinator.com"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/errorTvEditLastName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/contact_number"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/focus"
                        android:elevation="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_light"
                        android:hint="@string/contact"
                        android:inputType="number"
                        android:text="9818324805"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/errorTvEditContactNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red"
                        android:visibility="gone" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/address"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/focus"
                        android:elevation="@dimen/_5sdp"
                        android:text="okhla phase1"
                        android:fontFamily="@font/poppins_light"
                        android:hint="Enter address"
                        android:inputType="text"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="@dimen/Form_ETorTV" />

                    <TextView
                        android:id="@+id/errorTvEditAddress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:text=""
                        android:textColor="@color/red"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Date of Birth"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/date_of_birth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/focus"
                            android:drawableRight="@drawable/calendar"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="@string/dd_mm_yyyy"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:text="12-08-1976"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />


                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Services"
                        android:textColor="@color/title_myprofile"
                        android:textSize="@dimen/Form_ETorTV" />

                    <RelativeLayout
                        android:id="@+id/department_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/focus">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/focus"
                            android:drawableRight="@drawable/ic_baseline_keyboard_arrow_down_24"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:hint="Select services"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:background="@drawable/flag_transparent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Payment Information"
                            android:textSize="@dimen/_15sdp"
                            android:textStyle="bold"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:textColor="@color/red"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:text="Bank Name"
                            android:fontFamily="@font/poppins_medium"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hintSize"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:background="@drawable/focus"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="ICICI bank"
                            android:hint="Enter Bank Name"
                            android:inputType="text"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="Bank Account Number"
                            android:fontFamily="@font/poppins_medium"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hintSize"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:background="@drawable/focus"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="12345678"
                            android:hint="Enter Bank Account Number"
                            android:inputType="text"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />






                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:text="IFSC"
                            android:fontFamily="@font/poppins_medium"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hintSize"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:background="@drawable/focus"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:text="90909090"
                            android:hint="Enter IFSC"
                            android:inputType="text"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="3dp"
                            android:layout_weight=".8"
                            android:text="Branch Name"
                            android:fontFamily="@font/poppins_medium"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@color/black"
                            android:textSize="@dimen/hintSize"
                            />
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_3sdp"
                            android:background="@drawable/focus"
                            android:elevation="@dimen/_5sdp"
                            android:fontFamily="@font/poppins_light"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:hint="Enter Branch Name"
                            android:inputType="text"
                            android:padding="10dp"
                            android:text="okhla phase 1"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/Form_ETorTV" />


                    </LinearLayout>

                    <Button
                        android:id="@+id/save"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="20dp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/login_button"
                        android:fontFamily="@font/poppins_medium"
                        android:text="SAVE"
                        android:textColor="@color/white"
                        android:textSize="@dimen/SUbTitle" />

                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>