<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/_10sdp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/order_review_items_" />

        <LinearLayout
            android:id="@+id/ll_about_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/image"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/item_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/cross_button"
                    android:fontFamily="@font/poppins_medium"
                    android:paddingEnd="@dimen/_5sdp"
                    android:text="Jan Sflanaganvik sofa "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />


                <ImageView
                    android:id="@+id/cross_button"
                    android:layout_width="17dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/delete_icon"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="gone"/>


            </RelativeLayout>

            <TextView
                android:id="@+id/qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/poppins_medium"
                android:text=""
                android:textColor="@color/grey"
                android:textSize="@dimen/_9sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:singleLine="true"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="hjhskjdhsasdjasdajkahdjkahdsdjkadsdjkadhjkah" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/title"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:gravity="end"
                    android:fontFamily="@font/poppins_bold"
                    android:text="R500.00"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_below="@id/ll_about_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/_8sdp"
            android:orientation="horizontal"
            android:weightSum="8">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Order ID"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=":"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:id="@+id/txtOrderID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=""
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Delivery Date"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=":"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:id="@+id/txtDeliveryDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=""
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:text="Status"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=":"
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                    <TextView
                        android:id="@+id/txtStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginHorizontal="@dimen/_3sdp"
                        android:text=""
                        android:fontFamily="@font/poppins_medium"
                        android:singleLine="true"
                        android:textColor="@color/card_items_color"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:orientation="vertical"
                android:gravity="end|bottom"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/btnReOrder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="Reorder"
                    android:background="@drawable/login_button"
                    android:textAllCaps="false"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/white"/>

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey" />

</LinearLayout>